@model Answer

<form enctype="multipart/form-data" class="form" method="post" asp-action="Delete">
    <h1 class="blue">Are you sure you want to delete this answer?</h1>
    <div class="buttons-row-center">
        <button asp-controller="User" asp-action="UserAnswers" class="blue delete-button">No</button>
        <button type="submit" class="red delete-button">Yes</button>
    </div>
</form>
